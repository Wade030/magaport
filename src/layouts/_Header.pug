  button.o-burger.l-header__burger(onclick="toggleNav()")
    .o-burger__wrap
      .o-burger__line
      .o-burger__line
      .o-burger__line

  nav.c-nav
    .c-nav__menu
      ul.c-nav__btn-box
        li.c-nav__btn-wrap
          a.c-nav__btn(href=`${basePath}/#lineup`)
            //- span.c-nav__text-en LINEUP
            span.u-ff-en.u-text-lg LINEUP
            span 演出陣容
        li.c-nav__btn-wrap
          a.c-nav__btn(href=`${basePath}/news`)
            //- span.c-nav__text-en NEWS
            span.u-ff-en.u-text-lg NEWS
            span 最新消息
        li.c-nav__btn-wrap
          a.c-nav__btn(href=`${basePath}/#about`)
            //- span.c-nav__text-en ABOUT
            span.u-ff-en.u-text-lg ABOUT
            span 關於大港
        li.c-nav__btn-wrap
          a.c-nav__btn(href="##")
            //- span.c-nav__text-en TIMETABLE
            span.u-ff-en.u-text-lg TIMETABLE
            span 節目表
        li.c-nav__btn-wrap
          a.c-nav__btn(href="##")
            //- span.c-nav__text-en TICKET
            span.u-ff-en.u-text-lg TICKET
            span 購票資訊
        li.c-nav__btn-wrap
          a.c-nav__btn(href=`${basePath}/map.html`)
            //- span.c-nav__text-en MAP
            span.u-ff-en.u-text-lg MAP
            span 地圖導覽

      ul.c-nav__btn-box.--icon
        li.c-nav__btn-wrap
          a.c-nav__btn(href="##")
            iconify-icon.u-icon.--md(icon="mingcute:facebook-fill")
        li.c-nav__btn-wrap
          a.c-nav__btn(href="##")
            iconify-icon.u-icon.--md(icon="mingcute:ins-fill")
        li.c-nav__btn-wrap
          a.c-nav__btn(href="##")
            iconify-icon.u-icon.--md(icon="mingcute:youtube-fill")